{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "10s",
    "analysis": {
      "normalizer": {
        "my_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword",
        "normalizer": "my_normalizer"
      },
      "title": {
        "type": "text",
        "analyzer": "standard",
        "copy_to": "titleActorsSearch"
      },
      "year": {
        "type": "text",
        "analyzer": "standard"
      },
      "runtime": {
        "type": "text",
        "analyzer": "standard"
      },
      "genres": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "normalizer": "my_normalizer"
          }
        }
      },
      "director": {
        "type": "text",
        "analyzer": "standard"
      },
      "actors": {
        "type": "text",
        "analyzer": "standard",
        "copy_to": "titleActorsSearch"
      },
      "parsedActors": {
        "type": "text",
        "analyzer": "standard"
      },
      "plot": {
        "type": "text",
        "analyzer": "standard"
      },
      "posterUrl": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "normalizer": "my_normalizer"
          }
        }
      },
      "titleActorsSearch": {
        "type": "text",
        "analyzer": "standard"
      }
    }
  }
}